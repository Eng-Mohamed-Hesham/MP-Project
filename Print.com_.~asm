include emu8086.inc
ORG 100h

.data
print1 dw 0AH, 0DH,'the student id => $'
print2 dw 0AH, 0DH,'his grade => $'
num_of_students db 5
grades db 1, 0, ' ', 2, 2, ' ',  3, 0,' ', 4, 2,' ', 0, 0, ' '
.CODE
mov ax, @data
mov ds, ax
main proc

MOV di, 85   ; set the loop iterations
LEA SI, grades        ; load addres of the array of students   ;should be in ASCII
mov cx, 1


next_value:
MOV DL, [SI]
MOV DH, [SI+1]
CMP DX, 0
JE continue
print "the student id => "
mov dx, cx
add dx, 48
mov AH, 2
int 21h
print " his grade => "
MOV dx,[SI]
add dx, 48               ; get value from the array
mov AH, 02h
int 21h
MOV dx,[SI+1]
add dx, 48               ; get value from the array
mov AH, 02h
int 21h                        ;print it   what SI point to
PRINTN ""
continue:
dec di
inc cx
add si, 3
cmp di, 0
; next word
JNZ next_value             ; CX++
mov ah, 4ch
int 21h

main ENDP           ; End of the procedure




